<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="IndexDiscoverBinding">

        <variable
            name="indexDiscoverViewModel"
            type="com.greenhand.cooperativework.viewmodel.fragment.IndexDiscoverViewModel" />

    </data>

    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:id="@+id/srl_index_discover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smart.refresh.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <com.ndhzs.slideshow.SlideShow
                android:id="@+id/sh_index_discover_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:slide_outPageInterval="@dimen/community_parent_left_right"
                app:slide_adjacentPageInterval="2dp"
                app:slide_imgRadius="12dp"
                app:layout_isConsecutive="false"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="热门分类"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_index_discover_classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="查看全部分类 >"
                    android:textColor="#1296db"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    tools:ignore="HardcodedText" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_index_discover_classify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/default_light_grey"
                tools:ignore="PxUsage" />

            <include
                layout="@layout/include_index_discover_special"
                app:indexDiscoverViewModel="@{indexDiscoverViewModel}"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="本周榜单"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_index_discover_rankList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="查看全部榜单 >"
                    android:textColor="#1296db"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    tools:ignore="HardcodedText" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_index_discover_rankList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="@color/default_light_grey"
                tools:ignore="PxUsage" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="推荐主题"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_index_discover_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:text="查看全部主题 >"
                    android:textColor="#1296db"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    tools:ignore="HardcodedText" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_index_discover_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.donkingliang.consecutivescroller.ConsecutiveScrollerLayout>

    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</layout>